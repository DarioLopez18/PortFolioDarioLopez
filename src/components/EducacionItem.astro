---
export interface Props {
  date: string;
  name: string;
  nivel: string;
  link?: string;
}
const { date, name, nivel, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none dark:text-gray-100"
  >{date}</time
>
<h3 class="text-lg font-semibold text-yellow-200 mt-2">
  {name}
</h3>
<p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty mt-2">
  {nivel}
</p>
<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-x-105 max-w-xl hover:bg-white/10 transition"
  >{link}</a
>
