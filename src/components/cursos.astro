---
import curso from "../img/Certificado.png";

const certificado = curso.src;

const CURSOS = [
  {
    name: "Programacion BackEnd",
    link: "https://www.coderhouse.com/online/programacion-backend",
    certificado: certificado,
  },
];
---

{
  CURSOS.map((curso) => (
    <article class="mb-14">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{curso.name}</h3>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={curso.certificado}
        alt="Captura de pantalla del proyecto"
      />
      <div class="flex justify-center gap-5 lg:gap-10 mt-5 mb-5">
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 lg:py-2 lg:px-4 text-xs text-base bg-white/5 hover:scale-x-105 max-w-xl hover:bg-white/10 transition"
          href={curso.link}
        >
          Ir al Curso
        </a>
      </div>
    </article>
  ))
}
